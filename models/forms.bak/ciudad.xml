<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="myfields">
        <field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
               readonly="true" class="readonly"
               description="JGLOBAL_FIELD_ID_DESC"/>
        <field
                name="iddepartamento"
                type="sql"
                default="10"
                label="COM_FOLIO_FIELD_MYFOLIO_LABEL"
                description="COM_FOLIO_FIELD_MYFOLIO_DESC"
                query="SELECT id AS value, departamento AS iddepartamento FROM #__invoices_departamentos" />
        <field name="ciudad" type="text" class="inputbox"
               size="40" label="Ciudad"
               description="Ciudad" required="true"/>
    </fieldset>
</form>
