<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="myfields">
        <field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
               readonly="true" class="readonly"
               description="JGLOBAL_FIELD_ID_DESC"/>
        <field
                name="idpais"
                type="sql"
                default="10"
                label="Pais"
                description="Pais"
                query="SELECT id AS value, pais AS idpais FROM #__invoices_paises" />
        <field name="departamento" type="text" class="inputbox"
               size="40" label="Departamento"
               description="Departamento" required="true"/>
    </fieldset>
</form>
